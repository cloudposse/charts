export REPO_URL := $(REPO_URL)/$(shell basename $(CURDIR))

.PHONY : info
info:
	@make -C packages/ $@

.PHONY : package
package:
	 find library/ -maxdepth 1 -mindepth 1 -type d '!' -name packages  | xargs helm package


.PHONY : index
index:
	@make -C packages/ $@

.PHONY : clean
clean:
	@rm -f *.tgz
  
.PHONY : real-clean
real-clean: clean
	@make -C packages/ $@
